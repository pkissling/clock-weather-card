{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "timezone": "Europe/Berlin",
  "packageRules": [
    {
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "matchPackagePatterns": [
        "*"
      ],
      "groupName": "minor-dependencies"
    },
    {
      "matchPackageNames": [
        "lit"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "enabled": true
    }
  ],
  "schedule": [
    "before 9am on tuesday"
  ]
}
